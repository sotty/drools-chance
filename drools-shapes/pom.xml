	    <dependency>
		    <groupId>org.drools</groupId>
		    <artifactId>drools-compiler</artifactId>
		    <version>${project.version}</version>
	    </dependency>
	    <dependency>
		    <groupId>org.optaplanner</groupId>
		    <artifactId>optaplanner-core</artifactId>
		    <version>${project.version}</version>
	    </dependency>

      <dependency>
        <groupId>org.jdom</groupId>
